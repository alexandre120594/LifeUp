datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String?
  projects Project[]
  createdAt DateTime @default(now())
}
model Project {
  id        String   @id @default(cuid())
  title     String
  color     String?
  lastActivityDate  DateTime?
  streakGlobal   Int? @default(0)
  userId Int
  user User @relation(fields: [userId], references: [id])
  habits    Habit[]
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Habit {
  id          String   @id @default(cuid())
  title       String
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  streak      Int      @default(0)
  history     String[] // Example: ["2025-12-25", "2025-12-26"]
  frequency   String   // e.g., "daily"
  tasks       Task[]   
}

model Task {
  id          String   @id @default(cuid())
  title       String
  completed   Boolean  @default(false)
  date        DateTime @default(now())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  habitId     String?  // Links the task to the habit that generated it
  habit       Habit?   @relation(fields: [habitId], references: [id])
  dateFinish DateTime? 
  time        String?

  pomodoros   PomodoroSession[]

  totalFocusSeconds Int @default(0) 
}

model PomodoroSession {
  id          String   @id @default(cuid())
  taskId      String
  task        Task     @relation(fields: [taskId], references: [id])

  startedAt   DateTime
  endedAt     DateTime?
  duration    Int      // duration in seconds (e.g. 1500)
  
  status      PomodoroStatus @default(IN_PROGRESS)

  createdAt   DateTime @default(now())
}

enum PomodoroStatus {
  IN_PROGRESS
  COMPLETED
  INTERRUPTED
}